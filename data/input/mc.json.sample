/** Each field represents a criteria to evaluate possible itineraries with;
 * the value represents the weight assigned to that criteria in the evaluation process.
 * Allowed weights are in the range [0, +inf], where 0 means that the criteria won't be considered.
 */
{
  "distance": 1,  // Weight to assign to the total distance of the itinerary
  "arrival_time": 1,  // Weight to assign to the final arrival time of the itinerary
  "transfers": 1,  // Weight to assign to the number of transfers (changes of trip/transport) of the itinerary
  "co2": 1  // Weight to assign to the co2 emissions of the itinerary
}